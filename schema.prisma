// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DB_URL") // uses connection pooling
}

model Team {
  id           String   @id @default(uuid())
  name         String
  surname      String
  role         String?
  image        String?
  introduction String?
  skills       String?
  socials      Json    

  @@map("team") 
}